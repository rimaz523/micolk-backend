{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "webAppDomain": {
      "type": "string",
      "defaultValue": "micolk",
      "minLength": 5,
      "metadata": {
        "description": "Web app name."
      }
    },
    "apiAppSuffix": {
      "type": "string",
      "defaultValue": "backend-api",
      "minLength": 5,
      "metadata": {
        "description": "Web app type."
      }
    },
    "environment": {
      "type": "string",
      "defaultValue": "dev",
      "metadata": {
        "description": "environment."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "sku": {
      "type": "string",
      "defaultValue": "B1",
      "metadata": {
        "description": "The SKU of App Service Plan."
      }
    },
    "dotnetVersion": {
      "type": "string",
      "defaultValue": "v5.0",
      "metadata": {
        "description": "dotnet core version for sdk"
      }
    },
    "artifactsLocation": {
        "type": "string",
        "metadata": {
            "description": "The base URI where artifacts required by this template are located."
        }
    },
    "artifactsLocationSasToken": {
        "type": "securestring",
        "metadata": {
            "description": "The sasToken required to access artifactsLocation.  When the template is deployed using the accompanying scripts, a sasToken will be automatically generated."
        }
    }
  },
  "variables": {
    "webAppName": "[concat(parameters('webAppDomain'), '-', parameters('apiAppSuffix'), '-', parameters('environment'))]",
    "appServicePlanPortalName": "[concat('AppServicePlan-', parameters('webAppDomain'), '-', parameters('environment'))]",
    "linkedTemplates": {
        "apiManagement": "[concat(parameters('artifactsLocation'), 'infrastructure/api-management/azuredeploy.json', parameters('artifactsLocationSasToken'))]"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2020-06-01",
      "name": "[variables('appServicePlanPortalName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('sku')]"
      }
    },
    {
        "apiVersion": "2020-06-01",
        "name": "[variables('webAppName')]",
        "type": "Microsoft.Web/sites",
        "location": "[parameters('location')]",
        "dependsOn": [
            "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanPortalName'))]"
        ],
        "properties": {
            "name": "[variables('webAppName')]",
            "siteConfig": {
                "metadata": [
                    {
                        "name": "CURRENT_STACK",
                        "value": "dotnet"
                    }
                ],
                "netFrameworkVersion": "[parameters('dotnetVersion')]"
            },
            "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanPortalName'))]",
            "clientAffinityEnabled": true
        }
    },
    {
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2018-05-01",
        "name": "ApimDeployment",
        "resourceGroup": "[resourceGroup().name]",
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "uri": "[variables('linkedTemplates').apiManagement]",
                "contentVersion": "1.0.0.0"
            }
        }
    }
  ]
}
